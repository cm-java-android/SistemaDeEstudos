<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_second"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.thiago.sistemadeestudos.SecondActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecione a tarefa"
        android:textSize="30sp"
        android:paddingBottom="@android:dimen/app_icon_size"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/selectCurso"
        android:textSize="20sp"
        android:paddingBottom="20dp"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/selectAula"
        android:textSize="20sp"
        android:paddingBottom="20dp"/>

    <TextView
        android:text="Instalando o Android Studio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nomeAula"
        android:textSize="20sp"
        android:paddingBottom="18dp"
        android:fontFamily="serif"/>

    <CheckBox
        android:text="Exercício Feito?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chkExercicio"
        android:textSize="18sp"/>

    <CheckBox
        android:text="Laboratório Enviado?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/chkLab"
        android:textSize="18sp"
        />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressoGeral"
        android:layout_weight="@android:integer/config_mediumAnimTime"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="59dp">

        <Button
            android:text="Progresso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progresso"
            android:layout_weight="1" />

        <Button
            android:text="Cadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cadastro"
            android:layout_weight="1" />
    </LinearLayout>

    <Button
        android:text="Sair"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sair" />

</LinearLayout>
